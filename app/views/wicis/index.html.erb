<h1>Wicipedia</h1>
<div class="row">
  <div class="col-md-8">
    <% @wicis.each do |wici| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p><%= link_to (markdown_to_html wici.title), wici %></p>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <% if policy(Wici.new).create? %>
    </div class="col-md-4">
      <%= link_to "New", new_wici_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>